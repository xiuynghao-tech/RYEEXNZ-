local ESPTab = Window:CreateTab("ESP", "rbxassetid://4483345998")

-- Ore ESP Section
local OreESPSection = ESPTab:CreateSection("Ore ESP")

ESPTab:CreateToggle({
    Name = "Ore ESP",
    CurrentValue = false,
    Flag = "OreESP",
    Callback = function(Value)
        oreESP = Value
        if oreESP then
            spawn(function()
                while oreESP do
                    wait(1)
                    for _, v in pairs(Workspace:GetDescendants()) do
                        if v:IsA("BasePart") and (v.Name:lower():find("ore") or v.Name:lower():find("rock")) then
                            if not v:FindFirstChild("OreESP_Highlight") then
                                local highlight = Instance.new("Highlight")
                                highlight.Name = "OreESP_Highlight"
                                highlight.Parent = v
                                highlight.FillColor = Color3.fromRGB(0, 255, 255)
                                highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
                                highlight.FillTransparency = 0.3
                            end
                        end
                    end
                end
            end)
        else
            for _, v in pairs(Workspace:GetDescendants()) do
                if v:FindFirstChild("OreESP_Highlight") then
                    v.OreESP_Highlight:Destroy()
                end
            end
        end
    end
})

ESPTab:CreateColorpicker({
    Name = "Ore ESP Color",
    CurrentValue = Color3.fromRGB(0, 255, 255),
    Flag = "OreESPColor",
})

